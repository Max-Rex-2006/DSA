{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        ".",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "javac -d . \"${file}\"; if ($LASTEXITCODE -eq 0) { Get-Content input.txt | java \"${fileBasenameNoExtension}\" > output.txt }",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "shell": {
          "executable": "powershell.exe",
          "args": ["-Command"]
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}